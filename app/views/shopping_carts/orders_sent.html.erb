<div class="container">
    <TABLE class="table table-striped table-hover">
    <CAPTION> Récapitulatif de mes commandes </CAPTION>
    <TR>
     <TH> Date </TH>
     <TH> Boutique </TH>
     <TH> Produit </TH>
     <TH> Quantité </TH>
     <TH> Tarif </TH>
     <TH> Date de livraison</TH>
     <TH> Mode de livraison</TH>
     <TH> Statut</TH>
    </TR>
    <% @shopping_carts.each do |cart| %>
      <TR>
        <TD> <%= l(cart.created_at.to_date, format: :test) %> </TD>
        <TD> <%= cart.shop.name %></TD>
        <TD>
          <ul class="list-unstyled">
            <% cart.shopping_cart_items.each do |cart_item| %>
              <li>
                <%= cart_item.item.title %>
              </li>
            <% end %>
          </ul>
        </TD>
        <TD>
          <ul class="list-unstyled">
            <% cart.shopping_cart_items.each do |cart_item| %>
              <li>
                <%= cart_item.quantity %>
              </li>
            <% end %>
          </ul>
        </TD>
        <TD> <%= cart.total %> €</TD>
        <TD> <%= l(cart.delivery_date, format: :test) %></TD>
        <TD> <% if cart.delivery_choice %>
              <%= "Chez le patissier" %>
              <% else %>
              <%= "Chez l'acheteur" %>
              <% end %>
        </TD>
        <TD> <%= cart.accepted %> </TD>
      </TR>
    <% end %>
  </TABLE>
</div>
