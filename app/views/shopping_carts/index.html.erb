<div class="container">
    <TABLE border="1" class="table table-striped table-hover">
    <CAPTION> Récapitulatif de mes commandes </CAPTION>
    <TR>
     <TH> N° de commande </TH>
     <TH> Boutique </TH>
     <TH> Produits </TH>
     <TH> Tarif </TH>
     <TH> Statut de la commande </TH>
    </TR>
    <% @shopping_carts.each do |cart| %>
      <TR>
        <TD> <%= cart.id %>  </TD>
        <TD> <%= cart.shop.name %></TD>
        <TD>
          <ul>
            <% cart.shopping_cart_items.each do |cart_item| %>
              <li>
                <%= cart_item.quantity %>
                <%= cart_item.item.title %>
              </li>
            <% end %>
          </ul>
        </TD>
        <TD> <%= cart.total %> €</TD>
        <TD> <%= cart.status %> </TD>
      </TR>
    <% end %>
  </TABLE>
</div>