
<div class="header-shop">

  <div class="container">

    <div class="row">

      <div class="col-xs-4">

          <% if @shop.picture.exists? %>
            <%= image_tag @shop.picture.url(:medium), class: "img-responsive shop-img" %>
          <% else %>
            <%= image_tag "http://placehold.it/200x200", class: "shop-img"%>
          <% end %>
          <h2>
            <%= @shop.name %> <br>
          </h2>
          <p>
            <%= @shop.description %>
          </p>
      </div>
    </div>
  </div>
</div>

<div class="sommaire-shop">
  <ol class="breadcrumb">
  <li class="clickable"><a href="#pastries-shop">Produits</a></li>
  <li class="clickable"><a href="#">Commentaires</a></li>
</ol>
</div>

<div class="container">

  <div class="row">

    <div class="col-xs-8">
      <div id="pastries-shop">

        <h3>SES PÂTISSERIES</h3>
        <hr class="box-shadow-separator">
        <div class="row">
          <% number = 0 %>
          <% @shop.pastries.each do |pastry| %>
            <% number = number + 1 %>
            <div class="col-xs-4">
              <div class="animateBox">
                <%= link_to pastry_path(pastry) do %>
                  <% if pastry.picture_1.exists? %>
                    <%= image_tag pastry.picture_1.url(:thumb), class: "pastry-img" %>
                  <% else %>
                    <%= image_tag "http://placehold.it/100x100", class: "pastry-img"%>
                  <% end %>
                <% end %>
                <div class="info">
                  <span class="number">nº <%= number %></span><%=pastry.title.slice(0,1).capitalize + pastry.title.slice(1..-1)%>
                  <p><%=pastry.description.slice(0,1).capitalize + pastry.description.slice(1..-1)%></p>
                </div>
                <div class="price">
                  <%= link_to add_to_cart_pastry_path(pastry), remote: true, method: :post do %>
                      <button class="btn btn-default"><%= pastry.price_per_unit %> €</button>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-xs-2 col-xs-offset-2">
      <div class="my-cart">
      </div>
    </div>



  </div>
</div>





