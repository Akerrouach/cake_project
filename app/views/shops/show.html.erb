<div class="container">
  <div class="row">
    <div class="col-xs-4 text-center">
      <% if @shop.picture.exists? %>
        <%= image_tag @shop.picture.url(:medium), class: "img-responsive" %>
      <% else %>
         <%= image_tag "http://placehold.it/300x300"%>
      <% end %>
      <hr>
      <% if @shop.user== current_user %>
        <%= link_to new_shop_pastry_path(@shop), {class: "btn btn-primary"} do %>
          <i class="fa fa-plus"></i>
          Ajouter une pÃ¢tisserie
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-8">
      <h1>
        <%= @shop.name %>
      </h1>
      <p>
        <%= @shop.description %>
      </p>
    </div>
  </div>
</div>


<div class="container text-center">
  <div class="row">
    <h2>Pastries of <%= @shop.name %></h2>
    <% @shop.pastries.each do |pastry| %>
      <div class="col-xs-4">
        <%= link_to shop_pastry_path(@shop, pastry) do %>
          <% if pastry.picture_1.exists? %>
            <%= image_tag pastry.picture_1.url(:thumb), class: "pastries-img" %>
          <% else %>
             <%= image_tag "http://placehold.it/100x100", class: "pastries-img"%>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


