
<div class='comment'>
  <div class="col-xs-2">
    <div>
      <div class="clearfix">
        <%= link_to user_path(review.user) do %>
          <% if review.user.picture.exists? %>
            <%= image_tag review.user.picture, class: "img-rating" %>
          <% else %>
            <%= image_tag "placeholder.png", class: "img-rating" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-xs-10 rating-container">
    <div class="profile-name">
      <%= review.user.first_name %>
    </div>
    <% case review.rating %>
      <% when 1.0 %>
        <%= image_tag "one_rating.png", class: 'pull-right' %>
      <% when 1.5 %>
        <%= image_tag "one_and_half_rating.png", class: 'pull-right'%>
      <% when 2.0 %>
        <%= image_tag "two_rating.png", class: 'pull-right'%>
      <% when 2.5 %>
        <%= image_tag "two_and_half_rating.png", class: 'pull-right'%>
      <% when 3.0 %>
        <%= image_tag "three_rating.png", class: 'pull-right'%>
      <% when 3.5 %>
        <%= image_tag "three_and_half_rating.png", class: 'pull-right'%>
      <% when 4.0 %>
        <%= image_tag "four_rating.png", class: 'pull-right'%>
      <% when 4.5 %>
        <%= image_tag "four_and_half_rating.png", class: 'pull-right'%>
      <% when 5.0 %>
        <%= image_tag "five_rating.png", class: 'pull-right'%>
    <% end %>
    <br>
    <p class="content"><%= review.content %></p>
    <div class="clear"></div>
  </div>

  <div class="clear"></div>

</div>
